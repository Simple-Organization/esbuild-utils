{
  "name": "esbuild-utils",
  "version": "1.0.0-next.0",
  "author": "Simple Organization",
  "scripts": {
    "build": "tsc && rollup -c && node esbuild.mjs",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "playwright test",
    "prepack": "pnpm build"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simple-Organization/esbuild-utils.git"
  },
  "bugs": "https://github.com/Simple-Organization/esbuild-utils/issues",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "@types/node": "^22.4.0",
    "@types/ws": "^8.5.12",
    "prettier": "^3.3.3",
    "rollup": "^4.21.0",
    "rollup-plugin-dts": "^6.1.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "esbuild": "~0.23.1",
    "ws": "^8.18.0"
  },
  "files": [
    "dist/index.d.ts",
    "dist/index.js",
    "frontend/index.d.ts",
    "frontend/index.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./frontend": {
      "types": "./frontend/index.d.ts",
      "default": "./frontend/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "packageManager": "pnpm@9.6.0"
}
